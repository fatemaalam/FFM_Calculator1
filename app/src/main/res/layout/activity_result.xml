<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Result">

    <TextView
        android:id="@+id/textTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_bg"
        android:gravity="center"
        android:text="Result"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTop"
        android:layout_margin="20dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Name : "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:maxLines="2"
            android:text=" "
            android:textColor="#000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutName"

        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Age : "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:maxLines="1"
            android:text=" "
            android:textColor="#000"
            android:textSize="18sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutA"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Gender : "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:maxLines="1"
            android:text=" "
            android:textColor="#000"
            android:textSize="18sp"/>



    </LinearLayout>

    <TextView
        android:id="@+id/textBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutG"

        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="FAT FREE MASS(Kg)"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ffm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textBot"
        android:layout_marginTop="31dp"
        android:layout_weight="1"
        android:enabled="false"
        android:maxLines="1"
        android:gravity="center"
        android:text=" "
        android:textColor="#000"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textBot1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textBot"

        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="FAT FREE MASS INDEX(Kg/m2)"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ffmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textBot1"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:enabled="false"
        android:gravity="center"
        android:maxLines="1"
        android:text=" "
        android:textColor="#000"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textBot2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textBot1"
        android:layout_marginTop="92dp"
        android:text="       Developed by Fatema Binte Alam"
        android:textColor="#000"
        android:textSize="10sp"
        android:textStyle="italic" />

</RelativeLayout>